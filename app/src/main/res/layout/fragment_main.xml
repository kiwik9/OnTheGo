<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingBottom="25dp">

            <EditText
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_top"
                    android:paddingLeft="20dp"
                    android:minHeight="45dp"
                    android:paddingRight="20dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etLocation" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="24dp" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginTop="32dp" android:hint="¿A dónde vas?"/>
            <TextView
                    android:text="Rutas Frecuentes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                    android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/etLocation"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="@+id/textView7" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" android:id="@+id/constraintLayout">

                <Button
                        android:text="\uf015"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="#FFF"
                        android:background="@drawable/android_button_black"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button3"
                        app:layout_constraintStart_toEndOf="@+id/button2"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
                        app:layout_constraintEnd_toStartOf="@+id/button4"
                />
                <Button
                        android:textColor="#FFF"
                        android:text="\uf19c"

                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:background="@drawable/android_button_yellow"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <Button
                        android:text="\uf1ad"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="#FFF"

                        android:background="@drawable/android_button_green"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button2"
                        app:layout_constraintStart_toEndOf="@+id/button"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button"
                        app:layout_constraintEnd_toStartOf="@+id/button3"
                />
                <Button
                        android:text="\uf067"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="@color/colorBlue"
                        android:background="@drawable/android_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button3"/>
                <TextView
                        android:text="U"
                        android:layout_width="0dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        app:layout_constraintTop_toBottomOf="@+id/button"
                        android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="@+id/button"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <TextView
                        android:text="Trabajo"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintEnd_toEndOf="@+id/button2"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"/>
                <TextView
                        android:text="Casa"
                        android:textAlignment="center"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/button3"
                        app:layout_constraintEnd_toEndOf="@+id/button3"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"/>
                <TextView
                        android:text="Agregar"
                        android:layout_width="0dp"
                        android:textAlignment="center"

                        android:layout_height="wrap_content"
                        android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/button4"
                        app:layout_constraintEnd_toEndOf="@+id/button4"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                    android:text="Preferencias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout" android:textSize="18sp"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintEnd_toEndOf="@+id/textView12"
            >

                <Button
                        android:text="\uf1ba"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="#FFF"
                        android:background="@drawable/android_button_yellow"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button5"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
                <Button
                        android:text="\uf207"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="#FFF"
                        android:background="@drawable/android_button_green"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button6"
                        app:layout_constraintStart_toEndOf="@+id/button5"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
                        app:layout_constraintEnd_toStartOf="@+id/button7"/>
                <Button
                        android:text="\uf5b6"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"

                        android:textColor="#FFF"
                        android:background="@drawable/android_button_black"
                        android:layout_width="70dp"
                        android:layout_height="70dp" android:id="@+id/button7"
                        app:layout_constraintStart_toEndOf="@+id/button6"
                        app:layout_constraintEnd_toStartOf="@+id/button8"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button6"/>
                <Button
                        android:text="\uf0ad"
                        android:fontFamily="@font/font_awesome_900"
                        android:textSize="32sp"
                        android:textColor="#FFF"
                        android:background="@drawable/android_button_blue"
                        android:layout_width="70dp"
                        android:layout_height="70dp" android:id="@+id/button8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/button7"/>
                <TextView
                        android:textAlignment="center"
                        android:text="Colectivo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        app:layout_constraintTop_toBottomOf="@+id/button5"
                        app:layout_constraintEnd_toEndOf="@+id/button5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:text="Bus"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14" app:layout_constraintStart_toStartOf="@+id/button6"
                        app:layout_constraintEnd_toEndOf="@+id/button6"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView13"/>
                <TextView
                        android:textAlignment="center"
                        android:text="Micro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15" app:layout_constraintStart_toStartOf="@+id/button7"
                        app:layout_constraintEnd_toEndOf="@+id/button7"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"/>
                <TextView
                        android:textAlignment="center"
                        android:text="Modificar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        app:layout_constraintEnd_toEndOf="@+id/button8"
                        app:layout_constraintStart_toStartOf="@+id/button8"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView15"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>