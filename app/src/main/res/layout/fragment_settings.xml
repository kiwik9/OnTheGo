<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SettingsFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Ajustes"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:layout_marginTop="24dp" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:textSize="18sp" android:textColor="#000"/>
        <TextView
                android:text="Notificaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:textSize="18sp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
        <CheckBox
                android:text="Permitir notificaciones"
                android:layout_width="0dp"
                android:buttonTint="@color/colorBlue"

                android:layout_height="wrap_content"
                android:id="@+id/checkBox" app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:paddingLeft="10dp" android:textColor="@color/colorBlue"
        />
        <TextView
                android:text="Alertas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/checkBox"
                android:textSize="18sp"/>
        <CheckBox
                android:text="Permitir alertas"
                android:layout_width="0dp"
                android:buttonTint="@color/colorBlue"

                android:layout_height="wrap_content"
                android:id="@+id/checkBox2" app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:paddingLeft="10dp" android:textColor="@color/colorBlue"/>
        <TextView
                android:text="Rutas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox2" android:textSize="18sp"/>
        <CheckBox
                android:text="Sugerir rutas alternativas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorBlue"

                android:id="@+id/checkBox3" app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:paddingLeft="10dp" android:textColor="@color/colorBlue"/>
        <TextView
                android:text="Selección de Rutas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/checkBox3"
                app:layout_constraintEnd_toEndOf="@+id/checkBox3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox3"/>
        <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6">
            <RadioButton
                    android:text="Mostrar la opción más cercana"
                    android:buttonTint="@color/colorBlue"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
                    android:paddingLeft="10dp" android:textColor="@color/colorBlue"/>
            <RadioButton
                    android:text="Mostrar todas las opciones"
                    android:buttonTint="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
                    android:paddingLeft="10dp" android:textColor="@color/colorBlue"/>
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>